<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--Servlet Mappings-->
    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.Main</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Authorization</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.Authorization</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authorization</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.Authentication</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.Profile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Confirmation</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.Confirmation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Confirmation</servlet-name>
        <url-pattern>/confirm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.Cart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Order</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.Orders</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Order</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrderRemove</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.control.OrderRemove</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderRemove</servlet-name>
        <url-pattern>/orderremove</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControlPanel</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.control.ControlPanel</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlPanel</servlet-name>
        <url-pattern>/controlpanel</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddBook</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.control.AddBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBook</servlet-name>
        <url-pattern>/add/book</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditBook</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.control.EditBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditBook</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditDetailed</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.control.EditBookDetailed</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditDetailed</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditReader</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.control.EditReader</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditReader</servlet-name>
        <url-pattern>/reader</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>removeReader</servlet-name>
        <servlet-class>kz.edu.astanait.controllers.control.EditReaderDetailed</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeReader</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Jersey Rest Service</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>kz.edu.astanait</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey Rest Service</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

<!--INIT PARAMETERs-->
    <context-param>
        <param-name>Order</param-name>
        <param-value>Order</param-value>
    </context-param>
    <context-param>
        <param-name>Profile</param-name>
        <param-value>Profile</param-value>
    </context-param>
    <context-param>
        <param-name>Main</param-name>
        <param-value>Main</param-value>
    </context-param>
</web-app>